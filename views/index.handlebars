<div class="container">

    <div class="jumbotron">

        <h1>Burger Time!</h1>
        <h2>What kind of burger are you craving?</h2>
        <form class="create-form">

            <div class="form-group">
                <label for="newburger">I need a ... </label>
                <input type="text" id="newburger" name="burger">
                <button type="submit" class="btn btn-success" id="addburger">
                    <i class="fas fa-hippo"></i>
                </button>

            </div>
        </form>
    </div>

    <div class="row">

        <div class="col-sm-6">

            <div class="card">

                <div class="card-header">
                    Burgers to Eat
                </div>
                <div class="card-body">
                    <ul>
                        {{#each burgers}}
                            {{#unless devoured}}
                                <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
                                <button type="button" class="eatburger btn btn-warning" id="eatbutton" data-id="{{this.id}}" data-newDevoured="{{devour}}"><i class="fas fa-hippo"></i></button>
                                <hr>
                            {{/unless}}
                        {{/each}}
                    </ul>
                </div>

            </div>

        </div>

        <div class="col-sm-6">

            <div class="card">

                <div class="card-header">
                    Nom Nom Nom
                </div>
                <div class="card-body">
                    <ul>
                        {{#each burgers}}
                            {{#if devoured}}
                                <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
                                <hr>
                            {{/if}}
                        {{/each}}
                    </ul>
                </div>

            </div>

        </div>

    </div>


</div>